<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_orange">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/rlRegistration">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/ivCatering"
            android:src="@drawable/placeholder"
            android:layout_centerInParent="true"/>
        <TextView
            android:fontFamily="@font/roboto_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="2dp"
            android:layout_below="@+id/ivCatering"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10sp"
            android:text="Tap Untuk Mengubah Foto"
            android:textColor="@color/black"
            android:textSize="14sp"
            tools:ignore="MissingPrefix" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/rlRegistration"
        android:background="@drawable/bg_top_shap_10">

        <TextView
            android:id="@+id/tvTitle"
            android:fontFamily="@font/roboto_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:text="Tambah Toko"
            android:textColor="@color/light_orange"
            android:textSize="15sp"
            tools:ignore="MissingPrefix" />



        <EditText
            android:id="@+id/edFullName"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@id/tvTitle"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:background="@drawable/bg_editfield"
            android:hint="Nama"
            android:inputType="textPersonName"
            android:imeOptions="actionNext"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edDeskripsi"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@id/edFullName"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10sp"
            android:background="@drawable/bg_editfield"
            android:hint="Deskripsi"
            android:inputType="textMultiLine"
            android:imeOptions="actionGo"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10sp"
            android:layout_below="@id/edDeskripsi"
            android:id="@+id/lineAlamat">

            <EditText
                android:id="@+id/edAlamat"
                android:layout_toLeftOf="@+id/tvChooseLocation"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/bg_editfield"
                android:hint="Alamat"
                android:enabled="false"
                android:inputType="textMultiLine"
                android:imeOptions="actionGo"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvChooseLocation"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/roboto_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_editfield"
                android:backgroundTint="@color/light_orange"
                android:gravity="center_horizontal"
                android:padding="10sp"
                android:text="Pilih Lokasi"
                android:textColor="@color/white"
                android:textSize="15sp"
                tools:ignore="MissingPrefix" />

        </RelativeLayout>




        <TextView
            android:id="@+id/tvAdd"
            android:fontFamily="@font/roboto_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lineAlamat"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10sp"
            android:background="@drawable/bg_editfield"
            android:backgroundTint="@color/light_orange"
            android:gravity="center_horizontal"
            android:padding="10sp"
            android:text="Tambahkan"
            android:textColor="@color/white"
            android:textSize="15sp"
            tools:ignore="MissingPrefix" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_below="@id/tvAdd">

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>