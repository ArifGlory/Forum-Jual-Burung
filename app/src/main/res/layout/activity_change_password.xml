<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_orange">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/rlRegistration">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_appicon"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/rlRegistration"
        android:background="@drawable/bg_top_shap_10">

        <TextView
            android:id="@+id/tvTitle"
            android:fontFamily="@font/roboto_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:text="Ganti Password"
            android:textColor="@color/light_orange"
            android:textSize="15sp"
            tools:ignore="MissingPrefix" />

        <EditText
            android:id="@+id/edOldPassword"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@id/tvTitle"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10sp"
            android:background="@drawable/bg_editfield"
            android:hint="Password Lama"
            android:inputType="textPassword"
            android:imeOptions="actionNext"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:textSize="14sp" />
        <EditText
            android:id="@+id/edNewPassword"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@id/edOldPassword"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10sp"
            android:background="@drawable/bg_editfield"
            android:hint="Password Baru"
            android:inputType="textPassword"
            android:imeOptions="actionGo"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/tvSaveChange"
            android:fontFamily="@font/roboto_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edNewPassword"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10sp"
            android:background="@drawable/bg_editfield"
            android:backgroundTint="@color/light_orange"
            android:gravity="center_horizontal"
            android:padding="10sp"
            android:text="Simpan Perubahan"
            android:textColor="@color/white"
            android:textSize="15sp"
            tools:ignore="MissingPrefix" />

    </RelativeLayout>
</RelativeLayout>